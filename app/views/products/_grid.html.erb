<div>
  <% if view == 'list' %>
    <div class="space-y-4">
      <% products.each do |p| %>
        <div class="items-center gap-6 rounded-lg border border-gray-200 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-start gap-6">
            <div class="flex-shrink-0">
              <div class="h-20 w-20 rounded-lg bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                <span class="text-gray-700 text-3xl"><%= p[:emoji] %></span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div class="flex-1">
                  <h3 class="text-xl font-semibold text-gray-900"><%= p[:name] %></h3>
                  <p class="mt-1 text-sm text-gray-500"><%= p[:category] %></p>
                  <div class="mt-3">
                    <span class="text-2xl font-bold text-gray-900">$<%= sprintf('%.2f', p[:price]) %></span>
                  </div>
                </div>
                <button class="flex-shrink-0 rounded-md bg-gray-900 px-6 py-3 text-sm font-medium text-white hover:bg-gray-800 transition-colors">
                  Add to Cart
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% products.each do |p| %>
        <div class="group cursor-pointer">
          <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-100">
            <div class="h-64 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
              <span class="text-gray-700 text-4xl"><%= p[:emoji] %></span>
            </div>
          </div>
          <div class="mt-4">
            <h3 class="text-lg font-semibold text-gray-900"><%= p[:name] %></h3>
            <p class="mt-1 text-sm text-gray-500"><%= p[:category] %></p>
            <div class="mt-3 flex items-center justify-between">
              <span class="text-2xl font-bold text-gray-900">$<%= sprintf('%.2f', p[:price]) %></span>
              <button class="rounded-md bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-800">
                Add to Cart
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="mt-12 flex items-center justify-center gap-2">
    <% prev_page = page - 1 %>
    <% next_page = page + 1 %>
    <%= link_to "Previous", products_path(category: category, page: prev_page, view: view), class: "rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 #{'opacity-50 pointer-events-none' if page <= 1}", data: { turbo_frame: 'products' } %>
    <% (1..total_pages).each do |i| %>
      <%= link_to i, products_path(category: category, page: i, view: view), class: "rounded-md px-4 py-2 text-sm font-medium #{i == page ? 'bg-gray-900 text-white' : 'border border-gray-300 bg-white text-gray-700 hover:bg-gray-50'}", data: { turbo_frame: 'products' } %>
    <% end %>
    <%= link_to "Next", products_path(category: category, page: next_page, view: view), class: "rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 #{'opacity-50 pointer-events-none' if page >= total_pages}", data: { turbo_frame: 'products' } %>
  </div>
</div>


