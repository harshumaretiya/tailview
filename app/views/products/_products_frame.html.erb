<%= turbo_frame_tag 'products' do %>
  <!-- Filter Bar (Turbo links) -->
  <div class="mb-8 flex flex-wrap items-center justify-between gap-4 border-b border-gray-200 pb-4">
    <div class="flex items-center gap-2">
      <% categories.each do |c| %>
        <%= link_to c, products_path(category: c, page: 1, view: view), data: { turbo_frame: 'products' }, class: "rounded-md px-3 py-2 text-sm font-medium #{c == category ? 'bg-gray-900 text-white' : 'text-gray-700 hover:bg-gray-100'}" %>
      <% end %>
    </div>
    <div class="flex items-center gap-2 rounded-md border border-gray-300 bg-gray-50 p-1">
      <%= link_to products_path(category: category, page: page, view: 'grid'), data: { turbo_frame: 'products' }, class: "rounded px-3 py-1.5 text-sm font-medium transition-colors border #{view == 'grid' ? 'bg-gray-900 text-white border-gray-900' : 'border-gray-300 bg-white text-gray-700 hover:bg-gray-100 hover:text-gray-900'}" do %>
        <svg class="inline-block w-4 h-4 mr-1.5 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
        </svg>
        Grid
      <% end %>
      <%= link_to products_path(category: category, page: page, view: 'list'), data: { turbo_frame: 'products' }, class: "rounded px-3 py-1.5 text-sm font-medium transition-colors border #{view == 'list' ? 'bg-gray-900 text-white border-gray-900' : 'border-gray-300 bg-white text-gray-700 hover:bg-gray-100 hover:text-gray-900'}" do %>
        <svg class="inline-block w-4 h-4 mr-1.5 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        List
      <% end %>
    </div>
  </div>

  <%= render partial: 'grid', locals: { products: products, page: page, total_pages: total_pages, category: category, view: view } %>
<% end %>

