<!-- Form Input Examples - Copy & Paste Ready -->

<!-- Basic Text Input -->
<div class="space-y-4">
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
    <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="Enter your name">
  </div>

  <!-- Email Input -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
    <input type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="your@email.com">
  </div>

  <!-- Password Input -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
    <input type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="Enter password">
  </div>

  <!-- Number Input -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Age</label>
    <input type="number" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="Enter your age">
  </div>

  <!-- Input with Icon -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Search</label>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <input type="text" class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="Search...">
    </div>
  </div>

  <!-- Input with Button -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Subscribe</label>
    <div class="flex">
      <input type="email" class="flex-1 px-3 py-2 border border-gray-300 rounded-l-md focus:ring-blue-500 focus:border-blue-500" placeholder="Enter email">
      <button class="px-4 py-2 bg-blue-600 text-white rounded-r-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        Subscribe
      </button>
    </div>
  </div>
</div>

<!-- Input Sizes -->
<div class="space-y-4 mt-8">
  <h3 class="text-lg font-medium text-gray-900">Input Sizes</h3>
  
  <!-- Small Input -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Small Input</label>
    <input type="text" class="w-full px-2 py-1 text-sm border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="Small input">
  </div>

  <!-- Medium Input (Default) -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Medium Input</label>
    <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="Medium input">
  </div>

  <!-- Large Input -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Large Input</label>
    <input type="text" class="w-full px-4 py-3 text-lg border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="Large input">
  </div>
</div>

<!-- Input States -->
<div class="space-y-4 mt-8">
  <h3 class="text-lg font-medium text-gray-900">Input States</h3>
  
  <!-- Normal State -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Normal</label>
    <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="Normal input">
  </div>

  <!-- Error State -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Error</label>
    <input type="text" class="w-full px-3 py-2 border border-red-300 rounded-md focus:ring-red-500 focus:border-red-500" placeholder="Error input">
    <p class="mt-1 text-sm text-red-600">This field is required</p>
  </div>

  <!-- Success State -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Success</label>
    <input type="text" class="w-full px-3 py-2 border border-green-300 rounded-md focus:ring-green-500 focus:border-green-500" placeholder="Success input">
    <p class="mt-1 text-sm text-green-600">Looks good!</p>
  </div>

  <!-- Disabled State -->
  <div>
    <label class="block text-sm font-medium text-gray-500 mb-1">Disabled</label>
    <input type="text" disabled class="w-full px-3 py-2 border border-gray-200 rounded-md bg-gray-50 text-gray-500" placeholder="Disabled input">
  </div>
</div>
