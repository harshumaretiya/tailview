<%# Reusable activity feed item %>
<%# Usage: render partial: 'dashboards/activity_item', locals: { activity: { initials: 'JD', color: 'blue', message: '...', time: '...', amount: '...' } } %>
<div class="px-6 py-4 flex items-center space-x-4">
  <div class="flex-shrink-0">
    <div class="h-10 w-10 rounded-full bg-<%= activity[:color] %>-100 flex items-center justify-center">
      <span class="text-<%= activity[:color] %>-600 font-semibold text-sm"><%= activity[:initials] %></span>
    </div>
  </div>
  <div class="flex-1">
    <p class="text-sm font-medium text-gray-900"><%= activity[:message] %></p>
    <p class="text-sm text-gray-500"><%= activity[:time] %></p>
  </div>
  <% if activity[:amount] %>
    <div class="text-sm font-medium text-green-600"><%= activity[:amount] %></div>
  <% end %>
</div>

