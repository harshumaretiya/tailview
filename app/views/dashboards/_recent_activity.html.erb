<%# Recent activity feed with collapsible functionality %>
<div class="bg-white rounded-lg border border-gray-200 shadow-sm" data-controller="collapse">
  <div class="px-6 py-4 pt-4 border-b border-gray-200 flex items-center justify-between">
    <h3 class="text-lg font-semibold text-gray-900">Recent Activity</h3>
    <button type="button" data-action="click->collapse#toggle" class="text-gray-500 hover:text-gray-700">
      <svg class="h-5 w-5 transition-transform" data-collapse-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </button>
  </div>
  <div class="divide-y divide-gray-200" data-collapse-target="body">
    <% @activities.each do |activity| %>
      <%= render partial: 'dashboards/activity_item', locals: { activity: activity } %>
    <% end %>
  </div>
</div>

