
<div class="bg-white">
  <div class="px-4 py-12 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-7xl">
      <div class="flex items-center justify-between mb-8">
        <div class="text-center flex-1">
          <h1 class="text-4xl font-bold tracking-tight text-gray-900">Dashboard</h1>
          <p class="mx-auto mt-4 max-w-xl text-base text-gray-500">Track your metrics, monitor performance, and stay on top of what matters most.</p>
        </div>
        <div class="flex-shrink-0">
          <%= render 'shared/back_to_home' %>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-16">
    <%# Stats Grid - lazy loaded via Turbo Frame, auto-refreshes every 10 seconds %>
    <turbo-frame id="dashboard_stats" src="/dashboard/stats" data-controller="auto-refresh" data-auto-refresh-interval-value="10000"></turbo-frame>

    <%# Chart Section - two side-by-side charts %>
    <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
      <%# Revenue Chart - period filtering updates via Turbo Frame %>
      <turbo-frame id="revenue_chart" src="/dashboard/revenue_chart?period=week">
      </turbo-frame>

      <%# User Growth Chart - interactive filtering via Stimulus controller %>
      <turbo-frame id="user_growth_chart" src="/dashboard/user_growth">
      </turbo-frame>
    </div>

    <%# Recent Activity - auto-refreshes every 12 seconds, collapsible %>
    <turbo-frame id="dashboard_activity" src="/dashboard/activity" class="mt-8 p-5" data-controller="auto-refresh" data-auto-refresh-interval-value="12000"></turbo-frame>
  </div>
</div>

