<%# Stats grid using reusable stat_card partial %>
<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
  <%= render partial: 'dashboards/stat_card', locals: {
    title: 'Total Revenue',
    value: @metrics[:revenue],
    subtitle: "#{@metrics[:revenue_change]} from last month",
    color: 'green',
    icon: '<svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>'
  } %>

  <%= render partial: 'dashboards/stat_card', locals: {
    title: 'Active Users',
    value: @metrics[:users],
    subtitle: "#{@metrics[:users_change]} from last week",
    color: 'blue',
    icon: '<svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>'
  } %>

  <%= render partial: 'dashboards/stat_card', locals: {
    title: 'Orders',
    value: @metrics[:orders],
    subtitle: "Pending: #{@metrics[:pending_orders]}",
    color: 'purple',
    icon: '<svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" /></svg>'
  } %>

  <%= render partial: 'dashboards/stat_card', locals: {
    title: 'Conversion Rate',
    value: @metrics[:conversion],
    subtitle: "#{@metrics[:conversion_change]} from last month",
    color: 'orange',
    icon: '<svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>'
  } %>
</div>

