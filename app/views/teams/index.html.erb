<div class="bg-white">
  <div class="px-4 py-12 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-7xl">
      <div class="flex items-center justify-between mb-8">
        <div class="text-center flex-1">
          <h1 class="text-4xl font-bold tracking-tight text-gray-900">Our Team</h1>
          <p class="mx-auto mt-4 max-w-xl text-base text-gray-500">Meet the talented individuals who make our vision a reality every single day.</p>
        </div>
        <div class="flex-shrink-0">
          <%= render 'shared/back_to_home' %>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-16" data-controller="search-submit">
    <!-- Search (Turbo form) -->
    <div class="mb-8 flex flex-col sm:flex-row items-center justify-between gap-4">
      <%= form_with url: team_path, method: :get, data: { turbo_frame: 'team' }, html: { data: { search_submit_target: 'form' } } do %>
        <div class="relative flex-1 max-w-md w-full">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input name="q" value="<%= @q %>" data-search-submit-target="input" data-action="input->search-submit#inputChanged" type="text" class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Search team members...">
        </div>
      <% end %>
    </div>

    <%= render partial: 'team_frame', locals: { members: @members } %>
  </div>
</div>

