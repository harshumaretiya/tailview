<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Interactive Examples</h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Real-world interactive UI patterns with Stimulus</p>
      </div>
      <%= render 'shared/back_to_home' %>
    </div>

    <!-- Examples Grid -->
    <div class="grid gap-8 lg:grid-cols-2">
      
      <!-- Notification Center -->
      <div class="rounded-lg border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-gray-950">
        <div class="mb-4 flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="rounded-lg bg-purple-100 p-2 dark:bg-purple-900/30">
              <svg class="h-5 w-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Notifications</h2>
              <p class="text-sm text-gray-600 dark:text-gray-400">Mark as read, dismiss, and manage</p>
            </div>
          </div>
          <span data-notification-target="badge" class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-red-600 text-xs font-bold text-white">
            <%= @notifications.count { |n| !n[:read] } %>
          </span>
        </div>
        
        <div class="mb-4 flex gap-2">
          <button 
            data-action="click->notification#markAllRead"
            class="rounded-lg bg-blue-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-blue-700">
            Mark All Read
          </button>
          <button 
            data-action="click->notification#clearAll"
            class="rounded-lg bg-gray-200 px-3 py-1.5 text-xs font-medium text-gray-700 hover:bg-gray-300 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600">
            Clear All
          </button>
        </div>
        
        <div class="space-y-2" data-controller="notification">
          <% @notifications.each do |notif| %>
            <div 
              data-notification-target="item"
              class="rounded-lg border p-4 transition-all <%= notif[:read] ? 'bg-white dark:bg-gray-800' : 'bg-blue-50 dark:bg-blue-900/20' %> border-gray-200 dark:border-gray-700">
              <div class="flex items-start justify-between gap-3">
                <div class="flex-1">
                  <div class="flex items-center gap-2">
                    <% unless notif[:read] %>
                      <span class="notification-dot h-2 w-2 rounded-full bg-blue-600"></span>
                    <% end %>
                    <h3 class="font-medium text-gray-900 dark:text-white"><%= notif[:title] %></h3>
                  </div>
                  <p class="mt-1 text-sm text-gray-600 dark:text-gray-400"><%= notif[:message] %></p>
                  <span class="mt-2 inline-block text-xs text-gray-500"><%= notif[:time] %></span>
                </div>
                <div class="flex gap-1">
                  <button 
                    data-action="click->notification#markAsRead"
                    class="rounded p-1 hover:bg-gray-100 dark:hover:bg-gray-700"
                    title="Mark as read">
                    <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </button>
                  <button 
                    data-action="click->notification#remove"
                    class="rounded p-1 hover:bg-gray-100 dark:hover:bg-gray-700"
                    title="Dismiss">
                    <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Star Rating -->
      <div class="rounded-lg border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-gray-950">
        <div class="mb-4 flex items-center gap-3">
          <div class="rounded-lg bg-yellow-100 p-2 dark:bg-yellow-900/30">
            <svg class="h-5 w-5 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Star Rating</h2>
            <p class="text-sm text-gray-600 dark:text-gray-400">Interactive 5-star rating system</p>
          </div>
        </div>
        
        <!-- Rating 1 -->
        <div class="mb-6 rounded-lg bg-gray-50 p-4 dark:bg-gray-900">
          <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Rate this product:</label>
          <div class="flex items-center gap-4" data-controller="rating" data-rating-rating-value="0">
            <div class="flex gap-1">
              <% 5.times do |i| %>
                <button 
                  type="button"
                  data-rating-target="star"
                  data-value="<%= i + 1 %>"
                  data-action="mouseenter->rating#hover mouseleave->rating#leave click->rating#select"
                  class="cursor-pointer transition-colors">
                  <svg class="h-8 w-8 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                </button>
              <% end %>
            </div>
            <span data-rating-target="display" class="text-sm font-medium text-gray-700 dark:text-gray-300">Not rated</span>
            <input type="hidden" data-rating-target="value" />
          </div>
        </div>
        
        <!-- Rating 2 with default value -->
        <div class="rounded-lg bg-gray-50 p-4 dark:bg-gray-900">
          <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Your rating:</label>
          <div class="flex items-center gap-4" data-controller="rating" data-rating-rating-value="4">
            <div class="flex gap-1">
              <% 5.times do |i| %>
                <button 
                  type="button"
                  data-rating-target="star"
                  data-value="<%= i + 1 %>"
                  data-action="mouseenter->rating#hover mouseleave->rating#leave click->rating#select"
                  class="cursor-pointer transition-colors">
                  <svg class="h-8 w-8 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                </button>
              <% end %>
            </div>
            <span data-rating-target="display" class="text-sm font-medium text-gray-700 dark:text-gray-300">4 stars</span>
            <input type="hidden" data-rating-target="value" />
          </div>
        </div>
      </div>

      <!-- Progress Bars -->
      <div class="rounded-lg border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-gray-950">
        <div class="mb-4 flex items-center gap-3">
          <div class="rounded-lg bg-blue-100 p-2 dark:bg-blue-900/30">
            <svg class="h-5 w-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Progress Tracking</h2>
            <p class="text-sm text-gray-600 dark:text-gray-400">Interactive progress indicators</p>
          </div>
        </div>
        
        <div data-controller="progress" data-progress-progress-value="35">
          <div class="mb-4">
            <div class="mb-2 flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Upload Progress</span>
              <span data-progress-target="percentage" class="text-sm font-medium text-gray-700 dark:text-gray-300">35%</span>
            </div>
            <div class="h-3 w-full overflow-hidden rounded-full bg-gray-200 dark:bg-gray-700">
              <div 
                data-progress-target="bar"
                class="h-full bg-blue-600 transition-all duration-500 ease-out"
                style="width: 35%">
              </div>
            </div>
          </div>
          
          <div class="flex flex-wrap gap-2">
            <button 
              data-action="click->progress#increase"
              class="rounded-lg bg-blue-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-blue-700">
              +10%
            </button>
            <button 
              data-action="click->progress#decrease"
              class="rounded-lg bg-gray-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-gray-700">
              -10%
            </button>
            <button 
              data-action="click->progress#complete"
              class="rounded-lg bg-green-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-green-700">
              Complete
            </button>
            <button 
              data-action="click->progress#reset"
              class="rounded-lg bg-red-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-red-700">
              Reset
            </button>
          </div>
        </div>

        <!-- Step Progress -->
        <div class="mt-8" data-controller="progress" data-progress-steps-value="4">
          <h3 class="mb-4 text-sm font-semibold text-gray-900 dark:text-white">Step Progress</h3>
          <div class="flex items-center justify-between">
            <% 4.times do |i| %>
              <div class="flex flex-col items-center">
                <button 
                  data-progress-target="step"
                  data-step="<%= i + 1 %>"
                  data-action="click->progress#setStep"
                  class="mb-2 flex h-10 w-10 items-center justify-center rounded-full border-2 border-gray-300 bg-white text-sm font-semibold text-gray-700 transition-all hover:border-blue-600 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300">
                  <%= i + 1 %>
                </button>
                <span class="text-xs text-gray-600 dark:text-gray-400">Step <%= i + 1 %></span>
              </div>
              <% unless i == 3 %>
                <div class="mb-6 h-0.5 flex-1 bg-gray-300 dark:bg-gray-700"></div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Image Upload -->
      <div class="rounded-lg border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-gray-950">
        <div class="mb-4 flex items-center gap-3">
          <div class="rounded-lg bg-green-100 p-2 dark:bg-green-900/30">
            <svg class="h-5 w-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Image Upload</h2>
            <p class="text-sm text-gray-600 dark:text-gray-400">Drag & drop or click to upload</p>
          </div>
        </div>
        
        <div data-controller="image-upload">
          <div 
            data-action="drop->image-upload#handleDrop dragover->image-upload#handleDragOver dragleave->image-upload#handleDragLeave click->image-upload#selectFile"
            class="cursor-pointer rounded-lg border-2 border-dashed border-gray-300 p-8 text-center transition-colors hover:border-blue-500 hover:bg-blue-50 dark:border-gray-700 dark:hover:border-blue-500 dark:hover:bg-blue-900/20">
            
            <div data-image-upload-target="placeholder">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
              </svg>
              <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                <span class="font-semibold text-blue-600">Click to upload</span> or drag and drop
              </p>
              <p class="mt-1 text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
            </div>
            
            <img data-image-upload-target="preview" class="mx-auto hidden max-h-64 rounded-lg" alt="Preview" />
          </div>
          
          <input 
            type="file" 
            data-image-upload-target="input"
            data-action="change->image-upload#handleFile"
            accept="image/*"
            class="hidden" />
          
          <div class="mt-4 flex items-center justify-between">
            <div class="text-sm">
              <p class="font-medium text-gray-700 dark:text-gray-300" data-image-upload-target="filename">No file selected</p>
              <p class="text-xs text-gray-500" data-image-upload-target="size"></p>
            </div>
            <button 
              data-action="click->image-upload#remove"
              class="rounded-lg bg-red-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-red-700">
              Remove
            </button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

