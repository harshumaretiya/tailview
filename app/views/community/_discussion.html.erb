<% highlight ||= false %>
<li id="discussion-<%= discussion[:id] %>"
    class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm transition hover:border-rose-200 hover:shadow-md"
    data-controller="<%= highlight ? "community-feed-item" : nil %>">
  <article aria-labelledby="discussion-title-<%= discussion[:id] %>">
    <header class="flex flex-wrap items-start justify-between gap-3">
      <div class="flex items-center gap-3">
        <img src="<%= discussion[:author_avatar_url] %>" alt="<%= discussion[:author_name] %>" class="size-12 rounded-full object-cover" />
        <div>
          <p class="text-sm font-semibold text-gray-900"><%= discussion[:author_name] %></p>
          <p class="text-xs text-gray-500">
            <%= discussion[:author_role] %>
            â€¢
            <%= time_tag discussion[:posted_at], "#{time_ago_in_words(discussion[:posted_at])} ago", class: "font-medium text-gray-500" %>
          </p>
        </div>
      </div>
      <span class="inline-flex items-center gap-x-1 rounded-full bg-rose-50 px-3 py-1 text-xs font-medium text-rose-600">
        <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="size-4">
          <path d="M10 3a4 4 0 0 1 4 4v1h1a2 2 0 0 1 1.995 1.85L17 10v3a2 2 0 0 1-1.85 1.995L15 15h-1v.5a2.5 2.5 0 0 1-4.95.405L9 15.5V15H7a2 2 0 0 1-1.995-1.85L5 13v-3a2 2 0 0 1 1.85-1.995L7 8h1V7a4 4 0 0 1 4-4Z" />
        </svg>
        <span><%= discussion[:category] %></span>
      </span>
    </header>

    <div class="mt-4 space-y-3">
      <h2 id="discussion-title-<%= discussion[:id] %>" class="text-lg font-semibold text-gray-900">
        <%= link_to "#", class: "transition hover:text-rose-600" do %>
          <%= discussion[:title] %>
        <% end %>
      </h2>
      <p class="text-sm text-gray-700"><%= discussion[:summary] %></p>
    </div>

    <footer class="mt-6 flex flex-wrap items-center justify-between gap-4 text-sm text-gray-500">
      <%= render "community/discussion_metrics", discussion: discussion %>

      <%= link_to "#",
                  class: "inline-flex items-center gap-x-2 text-sm font-medium text-gray-500 transition hover:text-rose-600" do %>
        <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="size-4">
          <path d="M13 4.5a2.5 2.5 0 1 1 .702 1.737L6.97 9.604a2.518 2.518 0 0 1 0 .792l6.733 3.367a2.5 2.5 0 1 1-.671 1.341l-6.733-3.367a2.5 2.5 0 1 1 0-3.475l6.733-3.366A2.52 2.52 0 0 1 13 4.5Z" />
        </svg>
        Share
      <% end %>
    </footer>
  </article>
</li>

