<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-950">
  <div class="px-4 py-12 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-7xl">
      <!-- Header Section -->
      <div class="mb-12 flex items-start justify-between">
        <div class="flex-1">
          <div class="mb-4 inline-flex items-center gap-2 rounded-full bg-blue-100 px-4 py-1.5 dark:bg-blue-900/30">
            <svg class="h-4 w-4 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
            </svg>
            <span class="text-sm font-medium text-blue-700 dark:text-blue-300">Analytics Dashboard</span>
          </div>
          <h1 class="text-5xl font-bold tracking-tight text-gray-900 dark:text-white">Area Charts</h1>
          <p class="mt-4 max-w-2xl text-lg text-gray-600 dark:text-gray-400">
            Beautiful, interactive area charts built with Rails, Hotwire & Stimulus. 
            Real-time updates, smooth animations, and production-ready components.
          </p>
        </div>
        <div class="flex-shrink-0">
          <%= render 'shared/back_to_home' %>
        </div>
      </div>


      <!-- Charts Grid -->
      <div class="space-y-8">
        <!-- Basic Area Chart -->
        <turbo-frame id="basic_area_chart" src="/charts/basic_area_chart?period=week" loading="lazy">
          <div class="animate-pulse rounded-xl border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-gray-900">
            <div class="h-8 w-48 rounded bg-gray-200 dark:bg-gray-700"></div>
            <div class="mt-4 h-64 rounded bg-gray-100 dark:bg-gray-800"></div>
          </div>
        </turbo-frame>

        <!-- Two column grid for medium charts -->
        <div class="grid gap-8 lg:grid-cols-2 p-6">
          <!-- Stacked Area Chart -->
          <turbo-frame id="stacked_area_chart" src="/charts/stacked_area_chart?period=month" loading="lazy">
            <div class="animate-pulse rounded-xl border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-gray-900">
              <div class="h-8 w-48 rounded bg-gray-200 dark:bg-gray-700"></div>
              <div class="mt-4 h-64 rounded bg-gray-100 dark:bg-gray-800"></div>
            </div>
          </turbo-frame>

          <!-- Gradient Area Chart -->
          <turbo-frame id="gradient_area_chart" src="/charts/gradient_area_chart?period=month" loading="lazy">
            <div class="animate-pulse rounded-xl border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-gray-900">
              <div class="h-8 w-48 rounded bg-gray-200 dark:bg-gray-700"></div>
              <div class="mt-4 h-64 rounded bg-gray-100 dark:bg-gray-800"></div>
            </div>
          </turbo-frame>
        </div>

        <!-- Comparison Chart -->
        <turbo-frame id="comparison_chart" src="/charts/comparison_chart?period=month" loading="lazy">
          <div class="animate-pulse rounded-xl border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-gray-900">
            <div class="h-8 w-48 rounded bg-gray-200 dark:bg-gray-700"></div>
            <div class="mt-4 h-64 rounded bg-gray-100 dark:bg-gray-800"></div>
          </div>
        </turbo-frame>

        <!-- Multi-Metric Chart -->
        <turbo-frame id="multi_metric_chart" src="/charts/multi_metric_chart?period=month" loading="lazy">
          <div class="animate-pulse rounded-xl border border-gray-200 bg-white mt-6 dark:border-gray-800 dark:bg-gray-900">
            <div class="h-8 w-48 rounded bg-gray-200 dark:bg-gray-700"></div>
            <div class="mt-4 h-64 rounded bg-gray-100 dark:bg-gray-800"></div>
          </div>
        </turbo-frame>
      </div>
    </div>
  </div>
</div>

