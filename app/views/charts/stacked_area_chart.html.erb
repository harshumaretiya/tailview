<%# Stacked Area Chart - Shows multiple datasets (Desktop, Mobile, Tablet) %>
<%= turbo_frame_tag 'stacked_area_chart' do %>
  <div class="overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-lg transition-shadow hover:shadow-xl dark:border-gray-800 dark:bg-gray-900" 
       data-controller="area-chart">
    <!-- Chart Header -->
    <div class="border-b border-gray-100 bg-gradient-to-br from-green-50/50 to-emerald-50/50 p-6 dark:border-gray-800 dark:from-green-950/20 dark:to-emerald-950/20">
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <div class="mb-3 flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 shadow-lg shadow-green-500/30">
              <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Traffic by Device</h3>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Desktop, Mobile & Tablet breakdown</p>
            </div>
          </div>
        </div>
        
        <%# Period selector %>
        <div class="inline-flex rounded-xl border border-gray-200 bg-white/80 p-1.5 backdrop-blur-sm dark:border-gray-700 dark:bg-gray-800/80">
          <% ['week', 'month', 'year'].each do |period| %>
            <%= link_to period.capitalize, 
                "/charts/stacked_area_chart?period=#{period}", 
                class: "px-5 py-2.5 text-sm font-semibold rounded-lg transition-all #{@period == period ? 'bg-gradient-to-br from-green-500 to-emerald-600 text-white shadow-md shadow-green-500/30' : 'text-gray-600 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700'}",
                data: { turbo_frame: 'stacked_area_chart' } %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Device Stats Grid -->
    <div class="grid gap-6 border-b border-gray-100 bg-white p-8 dark:border-gray-800 dark:bg-gray-900 sm:grid-cols-3">
      <div class="group relative overflow-hidden rounded-2xl border border-gray-100 bg-gradient-to-br from-blue-50 to-indigo-50/50 p-6 transition-all hover:scale-105 hover:shadow-lg dark:border-gray-800 dark:from-blue-950/20 dark:to-indigo-950/20">
        <div class="absolute right-4 top-4 opacity-10 group-hover:opacity-20">
          <svg class="h-16 w-16 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
        <p class="text-xs font-bold uppercase tracking-wider text-blue-600 dark:text-blue-400">Desktop</p>
        <p class="mt-3 text-4xl font-extrabold text-gray-900 dark:text-white"><%= number_with_delimiter(@totals[:desktop]) %></p>
        <p class="mt-2 text-sm font-medium text-gray-600 dark:text-gray-400"><%= ((@totals[:desktop].to_f / @totals[:total]) * 100).round(1) %>% of total</p>
      </div>

      <div class="group relative overflow-hidden rounded-2xl border border-gray-100 bg-gradient-to-br from-green-50 to-emerald-50/50 p-6 transition-all hover:scale-105 hover:shadow-lg dark:border-gray-800 dark:from-green-950/20 dark:to-emerald-950/20">
        <div class="absolute right-4 top-4 opacity-10 group-hover:opacity-20">
          <svg class="h-16 w-16 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
        </div>
        <p class="text-xs font-bold uppercase tracking-wider text-green-600 dark:text-green-400">Mobile</p>
        <p class="mt-3 text-4xl font-extrabold text-gray-900 dark:text-white"><%= number_with_delimiter(@totals[:mobile]) %></p>
        <p class="mt-2 text-sm font-medium text-gray-600 dark:text-gray-400"><%= ((@totals[:mobile].to_f / @totals[:total]) * 100).round(1) %>% of total</p>
      </div>

      <div class="group relative overflow-hidden rounded-2xl border border-gray-100 bg-gradient-to-br from-purple-50 to-pink-50/50 p-6 transition-all hover:scale-105 hover:shadow-lg dark:border-gray-800 dark:from-purple-950/20 dark:to-pink-950/20">
        <div class="absolute right-4 top-4 opacity-10 group-hover:opacity-20">
          <svg class="h-16 w-16 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
        </div>
        <p class="text-xs font-bold uppercase tracking-wider text-purple-600 dark:text-purple-400">Tablet</p>
        <p class="mt-3 text-4xl font-extrabold text-gray-900 dark:text-white"><%= number_with_delimiter(@totals[:tablet]) %></p>
        <p class="mt-2 text-sm font-medium text-gray-600 dark:text-gray-400"><%= ((@totals[:tablet].to_f / @totals[:total]) * 100).round(1) %>% of total</p>
      </div>
    </div>

    <!-- Stacked Area Chart -->
    <div class="relative rounded-2xl bg-gradient-to-br from-gray-50 to-green-50/30 p-6 dark:from-gray-900 dark:to-green-950/20" style="height: 360px;">
      <svg viewBox="0 0 <%= @data.length * 40 %> 300" class="h-full w-full" preserveAspectRatio="none">
        <!-- Define gradients for each device -->
        <defs>
          <linearGradient id="desktopGradient" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" style="stop-color:rgb(59, 130, 246);stop-opacity:0.6" />
            <stop offset="100%" style="stop-color:rgb(59, 130, 246);stop-opacity:0.2" />
          </linearGradient>
          <linearGradient id="mobileGradient" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" style="stop-color:rgb(34, 197, 94);stop-opacity:0.6" />
            <stop offset="100%" style="stop-color:rgb(34, 197, 94);stop-opacity:0.2" />
          </linearGradient>
          <linearGradient id="tabletGradient" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" style="stop-color:rgb(168, 85, 247);stop-opacity:0.6" />
            <stop offset="100%" style="stop-color:rgb(168, 85, 247);stop-opacity:0.2" />
          </linearGradient>
        </defs>

        <!-- Grid lines -->
        <% 5.times do |i| %>
          <line x1="0" y1="<%= i * 60 %>" x2="<%= @data.length * 40 %>" y2="<%= i * 60 %>" 
                stroke="currentColor" class="stroke-gray-300 dark:stroke-gray-600" stroke-width="1" opacity="0.3"/>
        <% end %>

        <%# Calculate stacked points %>
        <% 
          max_total = @data.map { |d| d[:desktop] + d[:mobile] + d[:tablet] }.max
          
          # Calculate cumulative points for stacking
          desktop_points = @data.each_with_index.map do |d, i|
            x = i * 40 + 20
            y = 280 - ((d[:desktop].to_f / max_total) * 250)
            { x: x, y: y, value: d[:desktop] }
          end
          
          mobile_points = @data.each_with_index.map do |d, i|
            x = i * 40 + 20
            cumulative = d[:desktop] + d[:mobile]
            y = 280 - ((cumulative.to_f / max_total) * 250)
            { x: x, y: y, value: d[:mobile] }
          end
          
          tablet_points = @data.each_with_index.map do |d, i|
            x = i * 40 + 20
            cumulative = d[:desktop] + d[:mobile] + d[:tablet]
            y = 280 - ((cumulative.to_f / max_total) * 250)
            { x: x, y: y, value: d[:tablet] }
          end
        %>

        <!-- Tablet Area (bottom layer) -->
        <path 
          d="M 0,300 L <%= tablet_points.first[:x] %>,<%= tablet_points.first[:y] %> 
             <% tablet_points.each_cons(2) do |p1, p2| %>
               <% cp1x = p1[:x] + 15 %>
               <% cp2x = p2[:x] - 15 %>
               Q <%= cp1x %>,<%= p1[:y] %> <%= (p1[:x] + p2[:x]) / 2 %>,<%= (p1[:y] + p2[:y]) / 2 %>
               Q <%= cp2x %>,<%= p2[:y] %> <%= p2[:x] %>,<%= p2[:y] %>
             <% end %>
             L <%= tablet_points.last[:x] %>,300 Z"
          fill="url(#tabletGradient)"
          data-area-chart-target="tabletArea"
          class="transition-all duration-700"
        />

        <!-- Mobile Area (middle layer) -->
        <path 
          d="M 0,300 L <%= mobile_points.first[:x] %>,<%= mobile_points.first[:y] %> 
             <% mobile_points.each_cons(2) do |p1, p2| %>
               <% cp1x = p1[:x] + 15 %>
               <% cp2x = p2[:x] - 15 %>
               Q <%= cp1x %>,<%= p1[:y] %> <%= (p1[:x] + p2[:x]) / 2 %>,<%= (p1[:y] + p2[:y]) / 2 %>
               Q <%= cp2x %>,<%= p2[:y] %> <%= p2[:x] %>,<%= p2[:y] %>
             <% end %>
             L <%= mobile_points.last[:x] %>,300 Z"
          fill="url(#mobileGradient)"
          data-area-chart-target="mobileArea"
          class="transition-all duration-700"
        />

        <!-- Desktop Area (top layer) -->
        <path 
          d="M 0,300 L <%= desktop_points.first[:x] %>,<%= desktop_points.first[:y] %> 
             <% desktop_points.each_cons(2) do |p1, p2| %>
               <% cp1x = p1[:x] + 15 %>
               <% cp2x = p2[:x] - 15 %>
               Q <%= cp1x %>,<%= p1[:y] %> <%= (p1[:x] + p2[:x]) / 2 %>,<%= (p1[:y] + p2[:y]) / 2 %>
               Q <%= cp2x %>,<%= p2[:y] %> <%= p2[:x] %>,<%= p2[:y] %>
             <% end %>
             L <%= desktop_points.last[:x] %>,300 Z"
          fill="url(#desktopGradient)"
          data-area-chart-target="desktopArea"
          class="transition-all duration-700"
        />

        <!-- Lines for each layer -->
        <path d="M <%= desktop_points.first[:x] %>,<%= desktop_points.first[:y] %> 
                 <% desktop_points.each_cons(2) do |p1, p2| %>
                   <% cp1x = p1[:x] + 15 %>
                   <% cp2x = p2[:x] - 15 %>
                   Q <%= cp1x %>,<%= p1[:y] %> <%= (p1[:x] + p2[:x]) / 2 %>,<%= (p1[:y] + p2[:y]) / 2 %>
                   Q <%= cp2x %>,<%= p2[:y] %> <%= p2[:x] %>,<%= p2[:y] %>
                 <% end %>"
              stroke="rgb(59, 130, 246)" stroke-width="2.5" fill="none" stroke-linecap="round"/>
        
        <path d="M <%= mobile_points.first[:x] %>,<%= mobile_points.first[:y] %> 
                 <% mobile_points.each_cons(2) do |p1, p2| %>
                   <% cp1x = p1[:x] + 15 %>
                   <% cp2x = p2[:x] - 15 %>
                   Q <%= cp1x %>,<%= p1[:y] %> <%= (p1[:x] + p2[:x]) / 2 %>,<%= (p1[:y] + p2[:y]) / 2 %>
                   Q <%= cp2x %>,<%= p2[:y] %> <%= p2[:x] %>,<%= p2[:y] %>
                 <% end %>"
              stroke="rgb(34, 197, 94)" stroke-width="2.5" fill="none" stroke-linecap="round"/>
        
        <path d="M <%= tablet_points.first[:x] %>,<%= tablet_points.first[:y] %> 
                 <% tablet_points.each_cons(2) do |p1, p2| %>
                   <% cp1x = p1[:x] + 15 %>
                   <% cp2x = p2[:x] - 15 %>
                   Q <%= cp1x %>,<%= p1[:y] %> <%= (p1[:x] + p2[:x]) / 2 %>,<%= (p1[:y] + p2[:y]) / 2 %>
                   Q <%= cp2x %>,<%= p2[:y] %> <%= p2[:x] %>,<%= p2[:y] %>
                 <% end %>"
              stroke="rgb(168, 85, 247)" stroke-width="2.5" fill="none" stroke-linecap="round"/>
      </svg>
    </div>

    <!-- X-axis labels -->
    <div class="mt-4 flex justify-between text-xs text-gray-500 dark:text-gray-400">
      <% @data.select.with_index { |_, i| i % (@period == 'month' ? 5 : 1) == 0 }.each do |d| %>
        <span><%= d[:label] %></span>
      <% end %>
    </div>

    <!-- Interactive Legend -->
    <div class="flex flex-wrap items-center justify-between gap-4 border-t border-gray-100 bg-gray-50/50 p-6 dark:border-gray-800 dark:bg-gray-900/50">
      <div class="flex flex-wrap gap-3">
        <button 
          data-action="click->area-chart#toggleLegend" 
          data-dataset="desktop"
          data-area-chart-target="legendItem"
          class="flex items-center gap-2 rounded-xl bg-blue-100 px-4 py-2 transition-all hover:scale-105 hover:shadow-md dark:bg-blue-900/30">
          <div class="legend-indicator h-4 w-4 rounded-full bg-blue-600 shadow-lg"></div>
          <span class="text-sm font-semibold text-blue-700 dark:text-blue-300">Desktop</span>
        </button>
        <button 
          data-action="click->area-chart#toggleLegend" 
          data-dataset="mobile"
          data-area-chart-target="legendItem"
          class="flex items-center gap-2 rounded-xl bg-green-100 px-4 py-2 transition-all hover:scale-105 hover:shadow-md dark:bg-green-900/30">
          <div class="legend-indicator h-4 w-4 rounded-full bg-green-600 shadow-lg"></div>
          <span class="text-sm font-semibold text-green-700 dark:text-green-300">Mobile</span>
        </button>
        <button 
          data-action="click->area-chart#toggleLegend" 
          data-dataset="tablet"
          data-area-chart-target="legendItem"
          class="flex items-center gap-2 rounded-xl bg-purple-100 px-4 py-2 transition-all hover:scale-105 hover:shadow-md dark:bg-purple-900/30">
          <div class="legend-indicator h-4 w-4 rounded-full bg-purple-600 shadow-lg"></div>
          <span class="text-sm font-semibold text-purple-700 dark:text-purple-300">Tablet</span>
        </button>
      </div>
      <button 
        data-action="click->area-chart#exportData"
        class="inline-flex items-center gap-2 rounded-xl border-2 border-green-500 bg-gradient-to-r from-green-500 to-emerald-600 px-5 py-2.5 text-sm font-semibold text-white shadow-lg shadow-green-500/30 transition-all hover:scale-105 hover:shadow-xl hover:shadow-green-500/40">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
        </svg>
        Export
      </button>
    </div>
  </div>
<% end %>

