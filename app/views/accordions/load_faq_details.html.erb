<%= turbo_frame_tag "faq_details_#{@faq_item[:id]}" do %>
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
    <h4 class="font-medium text-blue-900 mb-2">Additional Information</h4>
    <p class="text-blue-800 mb-3"><%= @faq_item[:answer] %></p>
    
    <div class="mt-3">
      <h5 class="font-medium text-blue-900 mb-2">Related Questions:</h5>
      <ul class="list-disc list-inside space-y-1">
        <% @faq_item[:related_questions].each do |question| %>
          <li class="text-blue-700"><%= question %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
