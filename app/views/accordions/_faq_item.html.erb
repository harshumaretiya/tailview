<!-- Simple FAQ Item -->
<div class="border-b border-gray-200 last:border-b-0" data-accordion-target="item" data-open="<%= faq[:open] || false %>">
  <button 
    class="w-full flex items-center justify-between px-6 py-4 text-left font-medium text-gray-900 hover:bg-gray-50 transition-colors"
    data-action="click->accordion#toggle"
  >
    <div class="flex items-center">
      <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded mr-3">
        <%= faq[:category] %>
      </span>
      <span><%= faq[:question] %></span>
    </div>
    <svg 
      class="w-5 h-5 text-gray-500 transition-transform duration-200 <%= 'rotate-180' if faq[:open] %>" 
      data-accordion-target="icon"
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>
  
  <div 
    class="px-6 py-4 text-sm text-gray-600"
    data-accordion-target="content"
  >
    <p class="mb-4"><%= faq[:answer] %></p>
    
    <!-- Simple Turbo Frame -->
    <%= turbo_frame_tag "faq_details_#{faq[:id]}", src: accordions_faq_details_path(faq[:id]), loading: :lazy do %>
      <div class="flex items-center justify-center py-4">
        <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div>
        <span class="ml-2 text-gray-500">Loading...</span>
      </div>
    <% end %>
  </div>
</div>