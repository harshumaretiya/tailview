<div class="<%= container_classes %>" <% if @dismissible %>data-controller="alert" data-alert-auto-dismiss-value="<%= @auto_dismiss %>" data-alert-dismiss-after-value="<%= @dismiss_after %>"<% end %>>
  <div class="flex">
    <% if show_icon? %>
      <div class="flex-shrink-0">
        <svg class="<%= icon_classes %>" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="<%= variant_config[:icon_path] %>" clip-rule="evenodd"></path>
        </svg>
      </div>
    <% end %>

    <div class="<%= @dismissible ? 'ml-3 flex-1' : 'ml-3' %>">
      <% if @title.present? %>
        <h3 class="<%= title_classes %>"><%= @title %></h3>
      <% end %>

      <% if @message.present? || content? %>
        <div class="<%= @title.present? ? 'mt-2' : '' %> <%= text_classes %>">
          <%= @message || content %>
        </div>
      <% end %>

      <% if @list_items.present? %>
        <div class="<%= @title.present? ? 'mt-2' : '' %> <%= text_classes %>">
          <ul class="list-disc pl-5 space-y-1">
            <% @list_items.each do |item| %>
              <li><%= item %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <% if @dismissible %>
      <div class="ml-auto pl-3">
        <div class="-mx-1.5 -my-1.5">
          <button type="button" class="<%= button_classes %>" data-action="click->alert#dismiss" aria-label="Dismiss">
            <span class="sr-only">Dismiss</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

